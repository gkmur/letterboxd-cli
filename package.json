{
  "name": "@gkmur/letterboxd-cli",
  "version": "0.1.0",
  "description": "CLI tool for Letterboxd - log films, manage watchlist, view diary and stats",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "letterboxd": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "letterboxd",
    "cli",
    "movies",
    "film",
    "diary"
  ],
  "author": "gkmur",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkmur/letterboxd-cli.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "keytar": "^7.9.0",
    "ora": "^8.0.1",
    "playwright": "^1.50.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
